<h1><%= @repo.metadata['name'] %></h1>

<div class='row-fluid'>  
  
  <div class='span9'>
    <p>
      <%= @repo.metadata['description']%>
    </p>

    <dl class='dl-horizontal'>
      <dt>Format</dt>
      <dd><span class='label label-success'><%= @repo.format %></label></dd>
      <dt>License</dt>
      <dd><%= link_to @repo.metadata['license']['name'], @repo.metadata['license']['url'] %></dd>
    </dl>
    
    <h3>Definitions</h3>
    <table class='table table-striped'>
      <tr>
        <th>Label</th>
        <th>Name</th>
        <th>Type</th>
        <th>Unit</th>
      </tr>
      <% @repo.metadata['definitions'].each do |definition| %>
        <tr>
          <td><%= definition['label'] %></td>
          <td><%= definition['name'] %></td>
          <td><%= definition['type'] %></td>
          <td><%= definition['unit'] %></td>
        </tr>
      <% end %>
  
    </table>


    <h3>Sample Data (5 of <%= @repo.data.size %>)</h3>
    <table class='table table-striped'>
      <tr>
        <% @repo.headers.each do |header| %>
          <th><%= header %></th>
        <% end %>
      </tr>
      <% @repo.data.first(5).each do |row| %>
        <tr>
          <% @repo.headers.each do |header| %>
            <td><%= row[header] %></td>
          <% end %>
        </tr>
      <% end %>
  
    </table>
    
  </div>

  <div class='span3'>
    <% if @repo.hosted_by_github? %>
      <div class='well'>
        <a href='https://github.com/<%= @repo.github_user_name %>/<%= @repo.github_repository_name %>/archive/master.zip' class='btn btn-primary'>
          <i class='icon icon-white icon-download-alt'></i>
          Download Latest
        </a>
      </div>

      <h3>Changes</h3>
      <ul class='unstyled'>
        <% @repo.commits.each do |commit| %>
          <li>
            <%= link_to DateTime.parse(commit['commit']['committer']['date']).to_s(:long),
             "https://github.com/#{@repo.github_user_name}/#{@repo.github_repository_name}/commit/#{commit['sha']}" %>
          </li>
        <% end %>
      </ul>
      <p>
        <a href='https://github.com/<%= @repo.github_user_name %>/<%= @repo.github_repository_name %>'>
          View more on Github
        </a>
      </p>
    <% end %>

  </div>
  
</div>